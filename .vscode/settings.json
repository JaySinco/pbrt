{
    "files.exclude": {
        "bin": true,
        "out": true,
        "deps/*/bin": true,
        "deps/*/include": true,
        "deps/*/lib": true,
        "deps/*/share": true,
        "deps/*/src": false,
        "deps/*/out": true,
    },
    "files.watcherExclude": {
        "bin": true,
        "out": true,
        "deps": true,
    },
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/src/core",
        "${workspaceFolder}/deps/.ext/src",
        "${workspaceFolder}/deps/glog/include",
        "${workspaceFolder}/deps/zlib/include",
        "${workspaceFolder}/deps/ptex/include",
        "${workspaceFolder}/deps/openexr/include/OpenEXR",
    ],
    "C_Cpp.default.defines": [
        "UNICODE",
    ],
    "C_Cpp.default.cppStandard": "c++11",
}
