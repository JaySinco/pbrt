{
    "files.exclude": {
        "bin": true,
        "out": true,
        "deps/*/bin": true,
        "deps/*/include": true,
        "deps/*/lib": true,
        "deps/*/share": true,
        "deps/*/src": false,
        "deps/*/out": true,
    },
    "files.watcherExclude": {
        "bin": true,
        "out": true,
        "deps": true,
    },
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/src/core",
        "${workspaceFolder}/deps/.ext/src",
        "${workspaceFolder}/deps/glog/include",
        "${workspaceFolder}/deps/zlib/include",
        "${workspaceFolder}/deps/ptex/include",
        "${workspaceFolder}/deps/openexr/include/OpenEXR",
    ],
    "C_Cpp.default.defines": [
        "NDEBUG",
        "_CRT_SECURE_NO_WARNINGS",
        "PBRT_HAVE_MEMORY_H",
        "PBRT_HAVE_HEX_FP_CONSTANTS",
        "PBRT_HAVE_BINARY_CONSTANTS",
        "PBRT_HAVE_CONSTEXPR",
        "PBRT_CONSTEXPR=constexpr",
        "PBRT_HAVE_ALIGNAS",
        "PBRT_HAVE_ALIGNOF",
        "PBRT_HAVE_NONPOD_IN_UNIONS",
        "PBRT_NOINLINE=__declspec(noinline)",
        "PBRT_HAVE__ALIGNED_MALLOC",
        "PBRT_THREAD_LOCAL=thread_local",
        "GOOGLE_GLOG_DLL_DECL=",
        "PTEX_STATIC",
    ],
    "C_Cpp.default.cppStandard": "c++11",
}
